---
import Body from "../../components/Body.astro";
import Header from "../../components/Header.astro";
import Layout from "../../layouts/Layout.astro";
import { Destination } from "../../components/Destination/index"
---

<Layout title="Welcome to Soace Tourism Website">
  <main class={`w-[375px] md:w-[768px] lg:w-[1440px] overflow-hidden
    [max-w-[390px]]:bg-[url('https://eloquent-moxie-e2e409.netlify.app/images/destination/background-destination-mobile.jpg')]
    max-lg:bg-[url('https://eloquent-moxie-e2e409.netlify.app/images/destination/background-destination-tablet.jpg')]
    xl:bg-[url('https://eloquent-moxie-e2e409.netlify.app/images/destination/background-destination-desktop.jpg')]
    bg-cover
  `}>
    <Header />
    <Body className="flex flex-col px-10 lg:gap-10 lg:px-20 text-white h-dvh">      
      <h1 class="text-base max-md:text-center md:text-4xl detination-title mb-5"><span class="text-white/70">01</span> Pick your destination</h1>
      <Destination client:load /> 
    </Body>
  </main>
</Layout>
<style>
  .span-title{
    font-size: 28px;
    letter-spacing: 4.75px;
  }
  .detination-title{
    letter-spacing: 4.75px;
  }
</style>